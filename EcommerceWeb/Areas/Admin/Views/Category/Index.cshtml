@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Category</h1>

<a class="btn btn-primary" asp-action="Create">Add Category</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Display Order</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>
                    <div class="d-grid gap-2 d-md-block">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary" role="button">Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger" role="button">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>